/* pages/index/index.wxss */
page {
  background-color: #FFFBE6; /* 暖色调背景 */
  font-family: 'Comic Sans MS', 'Chalkboard SE', sans-serif; /* 尝试用一点可爱的字体栈 */
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
  position: relative;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: 800;
  color: #FF6B6B; /* 活泼的红橙色 */
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  text-shadow: 2px 2px 0px #FFE3E3;
}

.subtitle {
  font-size: 30rpx;
  color: #4ECDC4; /* 清新的蓝绿色 */
  font-weight: 600;
}

.form-card {
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 12rpx 30rpx rgba(255, 107, 107, 0.15);
  border: 4rpx solid #FFE3E3;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #556270;
  margin-bottom: 24rpx;
}

.label::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 32rpx;
  background: #FF6B6B;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.input {
  background: #F7F9FC;
  padding: 30rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  border: 2rpx solid #EEF1F5;
  color: #333;
  transition: all 0.3s;
}

.input:focus {
  border-color: #4ECDC4;
  background: #FFFFFF;
}

.picker {
  background: #F7F9FC;
  padding: 30rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #EEF1F5;
}

.arrow {
  color: #FF6B6B;
  font-weight: bold;
}

.tags-container {
  display: flex;
  gap: 24rpx;
}

.tag {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background: #F7F9FC;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #8898AA;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  font-weight: 600;
}

.tag.active {
  background: #E3FDFD;
  color: #4ECDC4;
  border-color: #4ECDC4;
  box-shadow: 0 4rpx 10rpx rgba(78, 205, 196, 0.2);
}

.generate-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 800;
  border-radius: 60rpx;
  padding: 24rpx 0;
  margin-top: 60rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 107, 0.4);
  border: none;
  transition: transform 0.1s;
}

.generate-btn:active {
  transform: scale(0.98);
}

.generate-btn[disabled] {
  background: #E0E0E0 !important;
  color: #AAA !important;
  box-shadow: none;
}

.tips {
  margin-top: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #8898AA;
  background: rgba(255, 255, 255, 0.6);
  padding: 16rpx;
  border-radius: 30rpx;
  display: inline-block;
  margin-left: auto;
  margin-right: auto;
}
